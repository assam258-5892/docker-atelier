{
    // 파일 연관
    "files.associations": {
        // Docker 관련
        "Dockerfile*": "dockerfile",
        // Makefile 관련
        "Makefile*": "makefile",
        "*.mak": "makefile",
        // Python
        "*.py": "python",
        "*.pyi": "python",
        // JavaScript/TypeScript
        "*.js": "javascript",
        "*.jsx": "javascriptreact",
        "*.ts": "typescript",
        "*.tsx": "typescriptreact",
        // C/C++
        "*.cxx": "cpp",
        "*.h": "c",
        "*.hpp": "cpp",
        "*.inc": "c",
        // 마크다운
        "*.md": "markdown",
        // SQL/PGSQL
        "*.pgsql": "pgsql",
        "*.plpgsql": "pgsql",
        "*.sql": "sql"
    },
    // 에디터/코드 스타일(전역)
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrap": "off",
    "editor.renderWhitespace": "all",
    "editor.minimap.enabled": true,
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": true,
    "editor.comments.insertSpace": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.snippetSuggestions": "top",
    // Prettier
    "prettier.enable": true,
    "prettier.requireConfig": false,
    "prettier.printWidth": 100,
    "prettier.tabWidth": 2,
    "prettier.useTabs": false,
    "prettier.semi": true,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    "prettier.arrowParens": "always",
    // ESLint
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.run": "onType",
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": false,
    "eslint.codeActionsOnSave.mode": "all",
    "eslint.codeActionsOnSave.rules": null,
    "eslint.options": {
        "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
        ]
    },
    // Node.js/JS/TS
    "javascript.format.enable": false,
    "typescript.format.enable": false,
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.referencesCodeLens.enabled": true,
    "typescript.referencesCodeLens.enabled": true,
    "javascript.implementationsCodeLens.enabled": true,
    "typescript.implementationsCodeLens.enabled": true,
    "javascript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.parameterNames.enabled": "all",
    "javascript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.variableTypes.enabled": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.quoteStyle": "single",
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "typescript.format.insertSpaceAfterCommaDelimiter": true,
    "typescript.format.insertSpaceAfterSemicolonInForStatements": true,
    "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
    "typescript.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
    "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "typescript.format.semicolons": "insert",
    "typescript.format.tabSize": 2,
    "typescript.format.indentSize": 2,
    "typescript.format.convertTabsToSpaces": true,
    "typescript.format.baseIndentSize": 0,
    "typescript.format.insertSpaceAfterTypeAssertion": true,
    "typescript.format.insertSpaceAfterTypeAnnotation": true,
    "typescript.format.insertSpaceAfterConstructor": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
    // Python
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=88"
    ],
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Args": [
        "--max-line-length=88"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.envFile": "${workspaceFolder}/.env",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.defaultInterpreterPath": "python3",
    "python.terminal.activateEnvironment": true,
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    // CMake
    "cmake.ignoreCMakeListsMissing": true,
    // 파일/자동저장/검색/터미널/테마
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.autoSave": "onFocusChange",
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/.git": true,
        "**/.DS_Store": true
    },
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.fontFamily": "'D2Coding', 'D2Coding ligature', 'D2Coding Nerd', Menlo, Monaco, 'Fira Mono', 'Droid Sans Mono', 'monospace', 'Noto Sans Mono CJK KR'",
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vscode-icons",
    "window.zoomLevel": 0,
    // 언어별 설정
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [
            88
        ],
        "editor.wordWrap": "on",
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "always"
        }
    },
    "[sql]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.wordWrap": "on",
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "[pgsql]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.wordWrap": "on"
    },
    "[c]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.rulers": [
            80,
            120
        ],
        "editor.formatOnSave": false
    },
    "[cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.rulers": [
            80,
            120
        ],
        "editor.formatOnSave": false
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    },
    // SQLTools
    "sqltools.useNodeRuntime": true,
    "sqltools.format.alignKeywords": true,
    "sqltools.format.uppercase": true,
    "sqltools.format.tabSize": 4,
    "sqltools.format.linesBetweenQueries": 1
}
